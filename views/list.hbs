<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Product</title>
</head>
<body>
    <h1>List of Product</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Supplier/s</th>
            <th>Action</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.product_id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.product_description}}</td>
            <td>{{this.product_quantity}}</td>
            <td>{{this.suppliers}}</td>
            <td><a href="/auth/product-update-form/{{this.product_id}}">EDIT  </a> <a href="/auth/delete-product/{{this.product_id}}">  DELETE</a></td>
        </tr>
        {{/each}}
    </table>
    <a href="/auth/product-add-form">Add New Product</a>
</body>
</html>